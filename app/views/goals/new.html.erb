<h1>Create a New Goal</h1>

<%= form_with(model: @goal, url: goals_path) do |form| %>
  <div class="form-group">
    <%= form.label :wish_id, "Select a Wish" %>
    <%= form.collection_select :wish_id, Wishlist.all, :id, :name, prompt: "Select a Wish" %>
  </div>

  <div class="form-group">
    <%= form.label :target_date, "Target Date" %>
    <%= form.date_field :target_date %>
  </div>

  <div class="form-group">
    <%= form.label :target_days_per_week, "Target Days per Week" %>
    <%= form.number_field :target_days_per_week %>
  </div>

  <div class="form-group">
    <%= form.label :target_hours_per_day, "Target Hours per Day" %>
    <%= form.number_field :target_hours_per_day %>
  </div>

  <%= form.submit "Create Goal", class: "btn btn-primary" %>
<% end %>
